<%= stylesheet_link_tag "home" %>
<header>
  <nav class="navbar">
    <div class="navbar-brand">
      <%= link_to root_path do%>
        <%= image_tag 'logo.png', class:"logo" %>
      <% end %>
    </div>
    <div>
      <ul class="navbar-nav">
        <li> <%= link_to 'Dashboard', admin_path %></li>
        <li> <%= link_to 'Users', admin_users_path%></li>
        <li> <%= link_to 'Accounts', admin_accounts_path %></li>
        <li><%= link_to 'Transactions', admin_transactions_path %> </li>
        <li><%= link_to 'Cards', admin_cards_path %> </li>
        <li><%= link_to 'Acc.Activation', admin_activations_path %> </li>
        <li>
          <%= link_to users_notification_path do %>
            <i class="fa-solid fa-bell"></i>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="btn-primary">
      <% if user_signed_in? %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, class:" me-3" %>
        <%= link_to "Login", new_user_session_path %>
      <% end %>
    </div>
  </nav>
</header>
