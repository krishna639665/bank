<%= stylesheet_link_tag 'notification' %>
<% if @notifications.nil? %>
  <div class="card-list">
    <div class="card-list-body">
      <div class="card card-top">
        <div class="card-body">
          <div class="card-title">
            <h6 data-filter-by="text">No new notification</h6>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="card-list divScroll">
    <% @notifications.each do |notification|%>
      <div class="card-list-body">
        <div class="card card-top">
          <div class="card-body ">
            <div class="card-title">
              <h6 data-filter-by="text"><%=notification.message%></h6>
              <h6 class="text-small"><%=notification.created_at.strftime("%D, %T") %> </h6>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
