<%= stylesheet_link_tag "payment_gateway" %>
<div class="mt-4" style="margin-left: 84%; position: absolute; ">
  <%= link_to "Back", account_path(params[:account_id]), class: "btn-primary" %>
</div>
<%= form_with(model: @tnx, url: account_card_transfers_path)  do |form|  %>
  <div class="container">
    <div class="card p-center">
      <div class="top">
        <h3>Enter Card Details</h3>
        <hr>
      </div>
      <div class="card-details">
        <%= form.text_field :number, placeholder:"0000 0000 0000 0000",size:"19" %>
        <span>Card Number</span>
      </div>
      <div class="card-details mt-3">
        <%= form.text_field :name, placeholder:"Enter cardholder's full name",size:"19" %>
        <span>Account Holder Name</span>
      </div>
      <%= form.hidden_field :transaction_type, value: "debited" %>
      <div class="card-details mt-3">
        <%= form.text_field :transaction_amount, placeholder:"100.00",size:"19" %>
        <span>Amount</span>
      </div>
      <div class="card-details mt-3">
        <%= form.password_field :pin, placeholder:"Enter Your Card Pin",size:"19" %>
        <span>Pin</span>
      </div>
      <div>
        <%=form.submit "Confirm & Pay", class:"button mt-4"%>
      </div>
    </div>
  </div>
<%end%>
