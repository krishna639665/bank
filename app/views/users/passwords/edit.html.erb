<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="form_wrapper">
    <div class="form_container">
      <div class="title_container">
        <h2>Change your password</h2>
      </div>
      <div class="row clearfix">
        <div class="">
          <form>
            <%= f.hidden_field :reset_password_token %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <div class="input_field"><span><i aria-hidden="true" class="fa fa-lock"></i></span>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder:"New Password", required:true %>
            </div>
            <div class="text-danger">
              <%= resource.errors.messages[:password].join(', ')%>
            </div>
            <div class="input_field"><span><i aria-hidden="true" class="fa fa-lock"></i></span>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Repeat Password", required:true %>
            </div>
            <div class="text-danger">
              <%= resource.errors.messages[:password_confirmation].join(', ')%>
            </div>
            <%= f.submit "Change my password" %>
            <div>
              <%= render "users/shared/links" %>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<%end%>
