<%= stylesheet_link_tag "atm" %>
<h1 class="title mt-4">Hover To View CVV</h1>
<div style= "margin-left: 84%; position: absolute; ">
  <%if @card.pin == nil%>
    <%= link_to 'Set pin', account_card_setpin_path(@card.account_id,@card.id), class:"btn-primary"%>
  <%end%>
</div>
<div class="card">
  <div class="card__front card__part">
    <p class="card_numer"><%= (@card.number)%></p>
    <div class="card__space-75">
      <span class="card__label">Card holder</span>
      <p class="card__info"><%= @card.account.first_name%></p>
    </div>
    <div class="card__space-25">
      <span class="card__label">Expires</span>
      <p class="card__info"><%=@card.created_at.month%>/<%=(@card.created_at.year)+25  %></p>
    </div>
    <div class="card__space-75 mt-4">
      <span class="card__label">Swiss Bank</span>
    </div>
  </div>
  <div class="card__back card__part">
    <div class="card__black-line"></div>
    <div class="card__back-content">
      <div class="card__secret">
        <p class="card__secret--last"><%= @card.cvv%></p>
      </div>
    </div>
  </div>
</div>
